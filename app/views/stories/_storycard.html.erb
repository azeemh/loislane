<div class="storycard">
  <img class="coverimage" src="<%= url_for(story.image) if story.image.attached? %>">
  <h1><a href="stories/<%= story.slug %>"><%= story.title %></a></h1>
  <p>ID: <%= story.id %></p>
  <p>Slug: <%= story.slug %></p>
  <div><%= story.content.truncate(140).html_safe %><div> 
</div>