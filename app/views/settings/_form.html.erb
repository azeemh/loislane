<%= form_with(model: setting) do |form| %>
  <% if setting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
        <% setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :newspapername, style: "display: block" %>
    <%= form.text_field :newspapername %>
  </div>

  <div>
    <%= form.label :tagline, style: "display: block" %>
    <%= form.text_field :tagline %>
  </div>

  <div>
    <%= form.label :theme_id, style: "display: block" %>
    <%= collection_select(:setting, :theme_id, Theme.all, :id, :name, prompt: true ) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
